    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Final Project",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++17",
                "-o",
                "../bin/main",
                "main.cpp",
                "hash.cpp",
                "LinkedList.cpp",
                "BST.cpp"
            ],
            "options": {
                "cwd": "${workspaceFolder}/src"
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}